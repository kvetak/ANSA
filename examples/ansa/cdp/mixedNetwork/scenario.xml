<?xml version="1.0"?>
<scenario>
	<at t="40">
        <disconnect src-module="R1" src-gate="ethg$o[0]" />
        <disconnect src-module="R2" src-gate="ethg$o[0]" />
  	</at>
  	<at t="100">
        <connect src-module="R1" src-gate="ethg[0]"
                 dest-module="R2" dest-gate="ethg[0]"
                 channel-type="inet.node.ethernet.Eth100M">
        </connect>		
  	</at>
  	
    <at t="140">
        <tell module="lifecycleController" target="R2" operation="NodeShutdownOperation"/>
    </at>
    <at t="200">
        <tell module="lifecycleController" target="R2" operation="NodeStartOperation"/>
    </at>
</scenario>
