<?xml version="1.0"?>
<scenario>
	<at t="30">
        <disconnect src-module="R1" src-gate="ethg$o[0]" />
        <disconnect src-module="R2" src-gate="ethg$o[0]" />
  	</at>

  	<at t="150">
        <connect src-module="R1" src-gate="ethg[0]"
                 dest-module="R2" dest-gate="ethg[0]"
                 channel-type="inet.node.ethernet.Eth100M">
        </connect>		
  	</at>
  	
    <at t="160">
        <shutdown module="R1"/>
    </at>
    <at t="250">
        <startup module="R1"/>
    </at>
</scenario>
